<div class="col-md-6 offset-md-3">
    <div class="car bg-dark text-light">
        <div class="card-header">
            <h1 class=" h4 text-white">
                Contacts List
            </h1>
        </div>
        <div class="card-body">
            {{#if contacts}}
                <ul class="list-group">
                    {{#each contacts}}
                        <li class="list-group-item d-flex justify-content-between aling-item-center">
                            <div class="my-auto">
                                <h3 class="h6">
                                    {{firstname}} {{lastname}}
                                </h3>
                                <p>{{email}}</p>
                            </div>
                            <div>
                                <a href = "/delete-contact/{{id}}" class="btn btn-danger">
                                    Delete
                                </a>
                            </div>
                            <div>
                                <a href = "/edit-contact/{{id}}" class="btn btn-warning">
                                    Edit
                                </a>
                            </div>
                        </li>
                    {{/each}}
                </ul>
            {{else}}
            <p class="fs-4 text-center"> 
                Not contacts yet. 
            </p>
            {{/if}}
        </div>
        <div class="card-footer">
            <form action="{{#unless contact.id}}/new-contact{{else}}/update-contact/{{contact.id}}{{/unless}}" method="post">
                <div class="row">
                    <div class="col">
                        <label for="firstname">First name:</label>
                        <input  type="text"  
                                name="firstname"  
                                placeholder="Firstname" 
                                class="form-control mb-3" 
                                value="{{contact.firstname}}" 
                                autofocus
                        />
                    <div class="col">
                        <label for="lastname">Last name:</label>
                        <input  type="text"  
                                name="lastname"  
                                placeholder="lastname" 
                                class="form-control mb-3" 
                                value="{{contact.lastname}}" 
                                autofocus
                        />       
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>